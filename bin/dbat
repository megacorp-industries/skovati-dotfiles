#!/bin/sh

case $(cat /sys/class/power_supply/BAT0/status) in
    "Charging")
        printf "%s%% +" $(cat /sys/class/power_supply/BAT0/capacity)
        ;;

    "Discharging")
        printf "%s%% -" $(cat /sys/class/power_supply/BAT0/capacity)
        ;;
    "Full")
        printf "%s%%" $(cat /sys/class/power_supply/BAT0/capacity)
        ;;
esac
