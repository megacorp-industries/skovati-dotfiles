#!/bin/sh
# autostart script for wlroots based tiling compositors

wl-paste -t text --watch clipman store --no-persist &

swayidle -w \
    timeout 300 'lock' \
    timeout 900 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep 'lock' &

gammastep -l 43:-89 -t 5500:3600 &
easyeffects --gapplication-service &
doas sh -c "echo 0 > /sys/devices/platform/thinkpad_acpi/leds/platform::micmute/brightness"
