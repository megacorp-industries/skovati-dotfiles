#!/bin/sh
# enables or disables the HDMI port as an external screen

usage() {
    printf "%s\n" "use y or n flags"
    exit 1
}

[ $# -eq 0 ] && usage

case "$1" in
    on)
        xrandr --output HDMI-A-0 --mode 3840x2160 --pos 0x0 --rotate normal --left-of eDP
        printf "%s\n" "HDMI display output enabled."
        ;;
    off)
        xrandr --output HDMI-A-0 --off
        printf "%s\n" "HDMI display output disabled."
        ;;
    *)
        usage
        ;;
esac
