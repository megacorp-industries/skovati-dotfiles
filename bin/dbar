#!/bin/sh
# outputs basic info to xroot for the dwm status bar

SEP=" | "

status() {
    if dmpd > /dev/null; then
        MUS=" $(dmpd)$SEP"
    else 
        MUS=""
    fi
    printf " %s%s$SEP%s$SEP%s$SEP%s$SEP%s" "$MUS" "vol: $(dvol)" "bat: $(dbat)" "wg: $(dwg)" "mem: $(dmem)" "$(dtime)"
}

while true; do
    xsetroot -name "$(status)"
    sleep 1
done
