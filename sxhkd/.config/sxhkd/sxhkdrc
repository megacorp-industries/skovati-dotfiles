#######################################
# wm independent hotkeys              #
#######################################

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

super + v
    $TERMINAL -e pulsemixer

# web browser
super + w
    librewolf

# file manager
super + e
    $TERMINAL -e lf

# audio controls
super + v
    $TERMINAL -e pulsemixer

#lock
super + ctrl + shift + l
    xsecurelock

# random scripts
super + {s, y, p}
    {paswap, yt, shot}

# audio controls
super + minus
    pactl set-sink-volume @DEFAULT_SINK@ -5%
   
super + equal
    pactl set-sink-volume @DEFAULT_SINK@ +5% 

super + m
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# custom media keybinds
XF86MonBrightnessUp
    brightnessctl -c backlight s +2%
XF86MonBrightnessDown
    brightnessctl -c backlight s 2%-
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5% 
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
